<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Noor Fragrances - Admin Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Montserrat:wght@300;400;500;600&display=swap">
    <!-- Add SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
      :root {
        /* Login page colors */
        --primary-color:#2c3e50;
        --secondary-color: #051b57;
        --accent-color: rgb(24, 4, 87);
        --light-color: #f7f9fc;
        --error-color: #dc3545;
        --text-color: #333;
        --border-radius: 8px;
        --box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        --transition: all 0.3s ease;
      }

      body {
        font-family: 'Montserrat', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--light-color);
        color: var(--text-color);
        line-height: 1.5;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 10px;
        margin: 0;
      }

      .page-container {
        display: flex;
        max-width: 900px;
        width: 100%;
        background: white;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--box-shadow);
        max-height: 98vh;
      }

      .admin-sidebar {
        flex: 0.8;
        background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 40px 20px;
        position: relative;
        color: white;
      }
      
      .brand-logo {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: white;
        text-align: center;
        letter-spacing: 2px;
        line-height: 1.2;
        z-index: 1;
        position: relative;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
        margin-bottom: 30px;
      }
      
      .brand-logo span {
        display: block;
        font-size: 1.2rem;
        font-weight: 400;
        letter-spacing: 5px;
        margin-top: 5px;
        opacity: 0.9;
      }

      .admin-sidebar::before {
        content: '';
        position: absolute;
        width: 150%;
        height: 150%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 70%);
        top: -25%;
        left: -25%;
        animation: pulse 8s infinite ease-in-out;
      }

      @keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.5; }
        50% { transform: scale(1.05); opacity: 0.8; }
      }

      .sidebar-features {
        margin-top: 40px;
        position: relative;
        z-index: 1;
      }

      .feature {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
      }

      .feature-icon {
        width: 40px;
        height: 40px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-right: 15px;
      }

      .feature-text h4 {
        font-size: 15px;
        margin-bottom: 5px;
      }

      .feature-text p {
        font-size: 13px;
        opacity: 0.7;
      }

      .sidebar-footer {
        font-size: 13px;
        opacity: 0.7;
        position: relative;
        z-index: 1;
        margin-top: auto;
      }

      .login-container {
        flex: 1.2;
        padding: 30px 40px;
        overflow-y: auto;
      }

      h1 {
        color: var(--accent-color);
        margin-bottom: 25px;
        font-weight: 600;
        text-align: center;
        font-size: 26px;
        font-family: 'Playfair Display', serif;
      }

      .form-group {
        margin-bottom: 20px;
        position: relative;
      }

      label {
        display: block;
        margin-bottom: 6px;
        font-weight: 500;
        color: var(--accent-color);
        font-size: 14px;
      }

      input {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: var(--border-radius);
        font-size: 14px;
        transition: var(--transition);
      }

      input:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 2px rgba(139, 109, 98, 0.2);
        outline: none;
      }

      .password-container {
        position: relative;
      }

      .toggle-password {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #777;
        z-index: 10;
      }

      .forgot-password {
        text-align: right;
        margin-bottom: 20px;
      }

      .forgot-password a {
        color: var(--primary-color);
        font-size: 14px;
        text-decoration: none;
        transition: var(--transition);
        font-weight: 500;
      }

      .forgot-password a:hover {
        color: var(--accent-color);
        text-decoration: underline;
      }

      button[type="submit"] {
        width: 100%;
        padding: 12px;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: var(--border-radius);
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: var(--transition);
        margin-top: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      button[type="submit"]:hover {
        background-color: var(--accent-color);
        transform: translateY(-2px);
      }

      .remember-me {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
      }

      .remember-me input {
        width: auto;
        margin-right: 10px;
      }

      .remember-me label {
        margin-bottom: 0;
        cursor: pointer;
      }

      .two-factor {
        background-color: #f8fafc;
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
        border: 1px solid #e2e8f0;
      }

      .two-factor h4 {
        font-size: 14px;
        margin-bottom: 5px;
        color: var(--accent-color);
        display: flex;
        align-items: center;
      }

      .two-factor h4 i {
        margin-right: 8px;
      }

      .two-factor p {
        font-size: 13px;
        color: #718096;
        line-height: 1.5;
      }

      @media (max-width: 768px) {
        .page-container {
          flex-direction: column;
          max-width: 90%;
        }

        .admin-sidebar {
          padding: 20px 15px;
          max-height: 180px;
        }

        .sidebar-features {
          display: none;
        }

        .login-container {
          padding: 20px 15px;
        }

        h1 {
          font-size: 22px;
          margin-bottom: 15px;
        }

        .brand-logo {
          font-size: 1.8rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="page-container">
      <div class="admin-sidebar">
        <div class="brand-logo">
          Noor Fragrances
          <span>ADMIN PANEL</span>
        </div>
        <div class="sidebar-features">
          <div class="feature">
            <div class="feature-icon">
              <i class="fas fa-sliders-h"></i>
            </div>
            <div class="feature-text">
              <h4>System Control</h4>
              <p>Centralized management for all platform components</p>
            </div>
          </div>
          <div class="feature">
            <div class="feature-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="feature-text">
              <h4>User Management</h4>
              <p>Manage accounts, permissions, and user roles</p>
            </div>
          </div>
          <div class="feature">
            <div class="feature-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <div class="feature-text">
              <h4>Analytics</h4>
              <p>Comprehensive statistics and data visualization</p>
            </div>
          </div>
        </div>
        <div class="sidebar-footer">
          &copy; 2025 Noor Fragrances. All rights reserved.
        </div>
      </div>

      <div class="login-container">
        <h1>Administrator Login</h1>

        <form id="adminLoginForm">
          <div class="form-group">
            <label for="email">Admin Email</label>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="Enter your admin email"
              required
            />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <div class="password-container">
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Enter your password"
                required
              />
              <span class="toggle-password" id="togglePassword">
                <i class="fa-solid fa-eye"></i>
              </span>
            </div>
          </div>
          
          <div class="remember-me">
            <input type="checkbox" id="remember" name="remember">
            <label for="remember">Stay signed in</label>
          </div>


          <button type="submit" name="login">Sign In to Dashboard</button>
        </form>

        <div class="two-factor">
          <h4><i class="fas fa-shield-alt"></i> Two-Factor Authentication</h4>
          <p>Admin accounts are secured with two-factor authentication. Please have your security device or app ready.</p>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const togglePassword = document.getElementById("togglePassword");
        const password = document.getElementById("password");
        const adminLoginForm = document.getElementById("adminLoginForm");
        
        // Password visibility toggle
        togglePassword.addEventListener("click", function() {
          const type = password.getAttribute("type") === "password" ? "text" : "password";
          password.setAttribute("type", type);
          this.querySelector("i").classList.toggle("fa-eye");
          this.querySelector("i").classList.toggle("fa-eye-slash");
        });

        // Form submission with Fetch and SweetAlert2
        adminLoginForm.addEventListener("submit", async (e) => {
          e.preventDefault(); // Prevent default form submission

          const email = document.getElementById("email").value;
          const password = document.getElementById("password").value;
          const remember = document.getElementById("remember").checked;

          try {
    
            const response = await fetch("/admin/login", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ email, password, remember }),
            });

            const data = await response.json();

            if (response.ok) {
              // Success: Show success alert and redirect
              Swal.fire({
                icon: "success",
                title: "Login Successful!",
                text: "Welcome to the Admin Dashboard",
                timer: 2000,
                showConfirmButton: false,
              }).then(() => {
                window.location.href = "/admin"; // Redirect to admin dashboard
              });
            } else {
              // Error: Show error message from server
              Swal.fire({
                icon: "error",
                title: "Login Failed",
                text: data.message || "Invalid administrator credentials",
              });
            }
          } catch (error) {
            // Network or unexpected error
            Swal.fire({
              icon: "error",
              title: "Connection Error",
              text: "Something went wrong. Please check your connection and try again.",
            });
          }
        });
      });
    </script>
  </body>
</html>