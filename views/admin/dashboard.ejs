<%- include("../../views/partials/admin/header") %>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    body {
        background-color: #f5f7fa;
        color: #333;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .content-wrapper {
        padding: 20px;
        margin-top: 70px;
        margin-left: 280px;
        transition: all 0.3s ease;
        min-height: calc(100vh - 70px);
    }

    .dashboard-title {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
    }

    .card {
        background-color: #ffffff;
        border: none Relacionado: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        margin-bottom: 20px;
        overflow: hidden;
    }

    .card-header {
        background-color: #ffffff;
        border-bottom: 1px solid #eaedf3;
        color: #333;
        font-weight: 500;
        padding: 15px 20px;
    }

    .card-body {
        padding: 20px;
    }

    .time-filter {
        background-color: #ffffff;
        border: 1px solid #eaedf3;
        border-radius: 6px;
        color: #333;
        padding: 8px 15px;
        cursor: pointer;
    }

    .time-filter-dropdown {
        background-color: #ffffff;
        border: 1px solid #eaedf3;
        border-radius: 6px;
    }

    .time-filter-item {
        color: #333;
        padding: 8px 15px;
    }

    .time-filter-item:hover {
        background-color: #f5f7fa;
    }

    .stats-card {
        background-color: #ffffff;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
    }

    .stats-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-right: 15px;
    }

    .stats-icon.sales {
        background-color: rgba(94, 92, 230, 0.2);
        color: #5e5ce6;
    }

    .stats-icon.orders {
        background-color: rgba(52, 199, 89, 0.2);
        color: #34c759;
    }

    .stats-icon.customers {
        background-color: rgba(255, 149, 0, 0.2);
        color: #ff9500;
    }

    .stats-icon.revenue {
        background-color: rgba(0, 122, 255, 0.2);
        color: #007aff;
    }

    .stats-info h3 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 5px;
        color: #ffffff;
    }

    .stats-info p {
        font-size: 14px;
        color: #9999a5;
        margin: 0;
    }

    .chart-container {
        height: 300px;
        position: relative;
    }

    .table {
        color: #333;
    }

    .table thead th {
        background-color: #f8f9fa;
        color: #6c757d;
        font-weight: 500;
        border: none;
        padding: 15px;
        font-size: 12px;
        text-transform: uppercase;
    }

    .table tbody td {
        border-color: #eaedf3;
        padding: 15px;
        vertical-align: middle;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(245, 247, 250, 0.5);
    }

    .order-id {
        font-weight: 600;
        color: #5e5ce6;
    }

    .status-badge {
        padding: 5px 10px;
        border-radius: 20px;
        font-weight: 500;
        font-size: 12px;
        text-align: center;
    }

    .status-delivered {
        background-color: #34c759;
        color: white;
    }

    .status-pending {
        background-color: #ce4f14;
        color: white;
    }

    .status-processing {
        background-color: #ff9500;
        color: white;
    }

    .status-cancelled {
        background-color: #ff3b30;
        color: white;
    }

    .status-shipped {
        background-color: #007aff;
        color: white;
    }

    .action-button {
        background-color: #f5f7fa;
        color: #333;
        border: 1px solid #eaedf3;
        border-radius: 4px;
        padding: 6px 12px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .action-button:hover {
        background-color: #5e5ce6;
        color: white;
        border-color: #5e5ce6;
    }

    .action-button.primary {
        background-color: #5e5ce6;
    }

    .action-button.primary:hover {
        background-color: #4b4ab3;
    }

    .time-period-dropdown {
        position: absolute;
        right: 20px;
        top: 15px;
        z-index: 1000;
    }

    .dropdown-menu {
        background-color: #ffffff;
        border: 1px solid #eaedf3;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .dropdown-item {
        color: #333;
    }

    .dropdown-item:hover {
        background-color: #f5f7fa;
        color: #333;
    }

    .dropdown-item.active {
        background-color: #5e5ce6;
        color: #ffffff;
    }

    .view-button {
        background-color: #5e5ce6;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 6px 12px;
        font-size: 12px;
        font-weight: 500;
    }

    .view-button:hover {
        background-color: #4b4ab3;
        color: white;
    }

    /* Donut & Bar charts placeholder styles */
    .donut-chart {
        width: 100%;
        height: 200px;
        position: relative;
    }

    .bar-chart {
        width: 100%;
        height: 200px;
        position: relative;
    }

    /* Responsive adjustments */
    @media screen and (max-width: 992px) {
        .content-wrapper {
            margin-left: 0;
        }
    }

    @media screen and (max-width: 768px) {
        .stats-row {
            flex-direction: column;
        }
        .stats-col {
            width: 100%;
            margin-bottom: 15px;
        }
    }
</style>

<body>
    <div class="content-wrapper">
        <div class="container-fluid">
            <h1 class="dashboard-title">Dashboard Overview</h1>
            
            <!-- Filters Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/admin" method="GET" class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label for="timeFilter" class="form-label">Time Period</label>
                            <select class="form-select" id="timeFilter" name="timeFilter" onchange="toggleDateInputs(this.value)">
                                <option value="all" <%= timeFilter === 'all' ? 'selected' : '' %>>All Time</option>
                                <option value="today" <%= timeFilter === 'today' ? 'selected' : '' %>>Today</option>
                                <option value="yesterday" <%= timeFilter === 'yesterday' ? 'selected' : '' %>>Yesterday</option>
                                <option value="week" <%= timeFilter === 'week' ? 'selected' : '' %>>Last 7 Days</option>
                                <option value="month" <%= timeFilter === 'month' ? 'selected' : '' %>>Last 30 Days</option>
                                <option value="year" <%= timeFilter === 'year' ? 'selected' : '' %>>Last Year</option>
                                <option value="custom" <%= timeFilter === 'custom' ? 'selected' : '' %>>Custom Range</option>
                            </select>
                        </div>
                        <div class="col-md-2 date-range" id="startDateContainer" style="<%= timeFilter === 'custom' ? '' : 'display: none;' %>">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" value="<%= startDate || '' %>">
                        </div>
                        <div class="col-md-2 date-range" id="endDateContainer" style="<%= timeFilter === 'custom' ? '' : 'display: none;' %>">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" value="<%= endDate || '' %>">
                        </div>
                        <div class="col-md-3">
                            <label for="orderStatus" class="form-label">Order Status</label>
                            <select class="form-select" id="orderStatus" name="orderStatus">
                                <option value="all" <%= orderStatus === 'all' ? 'selected' : '' %>>All Statuses</option>
                                <option value="Pending" <%= orderStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
                                <option value="Processing" <%= orderStatus === 'Processing' ? 'selected' : '' %>>Processing</option>
                                <option value="Shipped" <%= orderStatus === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                <option value="Delivered" <%= orderStatus === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                <option value="Cancelled" <%= orderStatus === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                <option value="Return Request" <%= orderStatus === 'Return Request' ? 'selected' : '' %>>Return Request</option>
                                <option value="Returned" <%= orderStatus === 'Returned' ? 'selected' : '' %>>Returned</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Key Stats Cards -->
            <div class="row">
                <div class="col-md-3">
                    <div class="card stats-card bg-primary">
                        <div class="card-body d-flex align-items-center">
                            <div class="stats-icon customers">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="stats-info">
                                <h3><%= totalUsers %></h3>
                                <p>Total Customers</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stats-card bg-success">
                        <div class="card-body d-flex align-items-center">
                            <div class="stats-icon revenue">
                                <i class="fas fa-rupee-sign"></i>
                            </div>
                            <div class="stats-info">
                                <h3>₹<%= totalRevenue.toFixed(2) %></h3>
                                <p>Total Revenue</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stats-card bg-warning">
                        <div class="card-body d-flex align-items-center">
                            <div class="stats-icon orders">
                                <i class="fas fa-shopping-cart"></i>
                            </div>
                            <div class="stats-info">
                                <h3><%= totalOrders %></h3>
                                <p>Total Orders</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card stats-card bg-info">
                        <div class="card-body d-flex align-items-center">
                            <div class="stats-icon sales">
                                <i class="fas fa-shopping-bag"></i>
                            </div>
                            <div class="stats-info">
                                <h3><%= totalProducts %></h3>
                                <p>Total Products</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Revenue and Order Charts -->
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Revenue Overview</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="revenueChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Order Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="orderStatusChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Methods and Category Sales -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Payment Methods</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="paymentMethodsChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Top Categories</h5>
                        </div>
                        <div class="card-body">
                            <div class="chart-container">
                                <canvas id="categorySalesChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Orders and Top Products -->
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Recent Orders</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th><a href="javascript:void(0)" onclick="sortOrders('orderId')" class="text-dark">
                                                Order ID 
                                                <% if(sortBy === 'orderId') { %>
                                                    <i class="fas fa-sort-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                                                <% } else { %>
                                                    <i class="fas fa-sort"></i>
                                                <% } %>
                                            </a></th>
                                            <th><a href="javascript:void(0)" onclick="sortOrders('userId')" class="text-dark">
                                                Customer
                                                <% if(sortBy === 'userId') { %>
                                                    <i class="fas fa-sort-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                                                <% } else { %>
                                                    <i class="fas fa-sort"></i>
                                                <% } %>
                                            </a></th>
                                            <th><a href="javascript:void(0)" onclick="sortOrders('createdOn')" class="text-dark">
                                                Date
                                                <% if(sortBy === 'createdOn' || !sortBy) { %>
                                                    <i class="fas fa-sort-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                                                <% } else { %>
                                                    <i class="fas fa-sort"></i>
                                                <% } %>
                                            </a></th>
                                            <th><a href="javascript:void(0)" onclick="sortOrders('finalAmount')" class="text-dark">
                                                Amount
                                                <% if(sortBy === 'finalAmount') { %>
                                                    <i class="fas fa-sort-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                                                <% } else { %>
                                                    <i class="fas fa-sort"></i>
                                                <% } %>
                                            </a></th>
                                            <th><a href="javascript:void(0)" onclick="sortOrders('status')" class="text-dark">
                                                Status
                                                <% if(sortBy === 'status') { %>
                                                    <i class="fas fa-sort-<%= sortOrder === 'asc' ? 'up' : 'down' %>"></i>
                                                <% } else { %>
                                                    <i class="fas fa-sort"></i>
                                                <% } %>
                                            </a></th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% recentOrders.forEach(order => { %>
                                            <tr>
                                                <td class="order-id"><%= order.orderId %></td>
                                                <td><%= order.userId ? order.userId.name : 'Unknown' %></td>
                                                <td><%= new Date(order.createdOn).toLocaleDateString() %></td>
                                                <td>₹<%= order.finalAmount.toFixed(2) %></td>
                                                <td>
                                                    <span class="status-badge status-<%= order.status.toLowerCase().replace(/\s+/g, '-') %>">
                                                        <%= order.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <a href="/admin/viewOrder?id=<%= order._id %>" class="btn btn-sm btn-primary">
                                                        <i class="fas fa-eye"></i> View
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Top Selling Products</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity</th>
                                            <th>Sales</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% topProducts.forEach(product => { %>
                                            <tr>
                                                <td><%= product.productName %></td>
                                                <td><%= product.totalQuantity %></td>
                                                <td>₹<%= product.totalSales.toFixed(2) %></td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <script>
        // Toggle date inputs
        function toggleDateInputs(value) {
            const dateRangeInputs = document.querySelectorAll('.date-range');
            if (value === 'custom') {
                dateRangeInputs.forEach(el => el.style.display = 'block');
            } else {
                dateRangeInputs.forEach(el => el.style.display = 'none');
            }
        }
        
        // Sort orders
        function sortOrders(field) {
            const urlParams = new URLSearchParams(window.location.search);
            const currentSortBy = urlParams.get('sortBy') || 'createdOn';
            const currentOrder = urlParams.get('sortOrder') || 'desc';
            
            if (field === currentSortBy) {
                urlParams.set('sortOrder', currentOrder === 'asc' ? 'desc' : 'asc');
            } else {
                urlParams.set('sortBy', field);
                urlParams.set('sortOrder', 'desc');
            }
            
            window.location.href = window.location.pathname + '?' + urlParams.toString();
        }
        
        // Initialize charts
        document.addEventListener('DOMContentLoaded', function() {
            // Revenue Chart
            const revenueCtx = document.getElementById('revenueChart').getContext('2d');
            const labels = JSON.parse('<%- JSON.stringify(last6Months) %>');
            new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Revenue',
                            data: JSON.parse('<%- JSON.stringify(monthlyRevenue) %>'),
                            borderColor: '#5e5ce6',
                            backgroundColor: 'rgba(94, 92, 230, 0.1)',
                            borderWidth: 2,
                            fill: true,
                            tension: 0.4
                        },
                        {
                            label: 'Orders',
                            data: JSON.parse('<%- JSON.stringify(monthlyOrders) %>'),
                            borderColor: '#34c759',
                            borderWidth: 2,
                            pointRadius: 3,
                            fill: false,
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top'
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            callbacks: {
                                label: function(context) {
                                    var label = context.dataset.label || '';
                                    if (label === 'Revenue') {
                                        return label + ': ₹' + context.parsed.y.toFixed(2);
                                    } else {
                                        return label + ': ' + context.parsed.y;
                                    }
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                maxTicksLimit: labels.length > 20 ? 10 : labels.length, // Limit ticks for readability
                                autoSkip: true
                            }
                        }
                    }
                }
            });
            
            // Order Status Chart
            const orderStatusCtx = document.getElementById('orderStatusChart').getContext('2d');
            const orderStatusData = {
                labels: Object.keys(JSON.parse('<%- JSON.stringify(orderStatusCounts) %>')),
                datasets: [{
                    data: Object.values(JSON.parse('<%- JSON.stringify(orderStatusCounts) %>')),
                    backgroundColor: [
                        '#ff9500', // Pending
                        '#5e5ce6', // Processing
                        '#007aff', // Shipped
                        '#34c759', // Delivered
                        '#ff3b30', // Cancelled
                        '#ff9500', // Return Request
                        '#007aff'  // Returned
                    ],
                    borderWidth: 0
                }]
            };
            
            new Chart(orderStatusCtx, {
                type: 'doughnut',
                data: orderStatusData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '65%',
                    plugins: {
                        legend: {
                            position: 'right'
                        }
                    }
                }
            });
            
            // Payment Methods Chart
            const paymentMethodsCtx = document.getElementById('paymentMethodsChart').getContext('2d');
            const paymentMethods = JSON.parse('<%- JSON.stringify(paymentMethods) %>');
            
            new Chart(paymentMethodsCtx, {
                type: 'pie',
                data: {
                    labels: ['Cash on Delivery', 'Online Payment', 'Wallet'],
                    datasets: [{
                        data: [
                            paymentMethods.cod.amount, 
                            paymentMethods.razorPay.amount, 
                            paymentMethods.wallet.amount
                        ],
                        backgroundColor: ['#34c759', '#5e5ce6', '#ff9500'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const label = context.label || '';
                                    const value = context.parsed || 0;
                                    return label + ': ₹' + value.toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
            
            // Category Sales Chart
            const categorySalesCtx = document.getElementById('categorySalesChart').getContext('2d');
            const categorySales = JSON.parse('<%- JSON.stringify(categorySales) %>');
            
            new Chart(categorySalesCtx, {
                type: 'bar',
                data: {
                    labels: categorySales.map(cat => cat.categoryName),
                    datasets: [{
                        label: 'Sales Amount',
                        data: categorySales.map(cat => cat.totalSales),
                        backgroundColor: 'rgba(94, 92, 230, 0.7)',
                        borderColor: '#5e5ce6',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return '₹' + context.parsed.y.toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
</body>