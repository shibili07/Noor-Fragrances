    <link rel="stylesheet" href="/styles/user/gmailChangedSuccess.css">
</head>
<body>
    <header class="header">
        <div class="header-logo">
            <h1>NOOR FRAGRANCES</h1>
        </div>
    </header>
    
    <div class="main-content">
        <div class="container">
        <div class="gmail-colors">
            <div class="gmail-color-1"></div>
            <div class="gmail-color-2"></div>
            <div class="gmail-color-3"></div>
            <div class="gmail-color-4"></div>
        </div>
        
        <div class="success-icon">
            <div class="checkmark"></div>
        </div>
        
        <div class="message">
            <h1>Email Updated Successfully!</h1>
            <p>
                <% if (typeof newEmail !== 'undefined' && newEmail) { %>
                    Your email has been successfully changed to <strong><%= newEmail %></strong>.
                <% } else { %>
                    Your email has been successfully updated.
                <% } %>
            </p>
            <a href="/profile" class="btn">Go to Profile</a>
        </div>
        
        <div class="particles" id="particles"></div>
    </div>
    </div>
    
