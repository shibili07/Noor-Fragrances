    <style>
      body {
        font-family: "Akshar", sans-serif;
        background-color: #f9f9f9;
        color: #333;
      }

      /* FULL-WIDTH CONTAINER */
      .user-dashboard {
        padding: 40px 30px;
        max-width: 100%;
        width: 100%;
      }

      /* LARGER CONTAINER WITH MORE PADDING */
      .info-container {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        padding: 35px;
        margin-bottom: 35px;
      }

      /* LARGER HEADING WITH MORE SPACE */
      .section-title {
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 30px;
        color: #333;
        padding-bottom: 15px;
        border-bottom: 1px solid #eaeaea;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      /* INCREASED SPACING FOR BALANCE CONTAINER */
      .balance-container {
        display: flex;
        justify-content: center;
        margin: 10px 0 30px;
        width: 100%;
      }

      /* MUCH LARGER BALANCE CARD WITH MORE PADDING */
      .balance-card {
        width: 100%;
        background: linear-gradient(135deg, #fd334e 0%, #e62b42 100%);
        color: white;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 8px 20px rgba(253, 51, 78, 0.25);
        position: relative;
        overflow: hidden;
      }

      .balance-card::before {
        content: "";
        position: absolute;
        top: -50px;
        right: -50px;
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.1);
      }

      .balance-card::after {
        content: "";
        position: absolute;
        bottom: -60px;
        left: -60px;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.08);
      }

      /* LARGER TYPOGRAPHY */
      .brand-name {
        font-size: 18px;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        opacity: 0.8;
        margin-bottom: 8px;
      }

      .balance-label {
        font-size: 20px;
        font-weight: 400;
        margin-bottom: 15px;
        opacity: 0.9;
      }

      .balance-amount {
        font-size: 46px;
        font-weight: 600;
        margin-bottom: 20px;
        letter-spacing: 1px;
      }

      .card-number {
        font-size: 18px;
        letter-spacing: 3px;
        opacity: 0.8;
        margin-bottom: 25px;
      }

      /* LARGER BUTTONS WITH MORE SPACE */
      .balance-actions {
        display: flex;
        gap: 20px;
        margin-top: 20px;
      }

      .balance-action-btn {
        background-color: rgba(255, 255, 255, 0.2);
        border: none;
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 17px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .balance-action-btn:hover {
        background-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
      }

      /* MORE SPACE FOR TABLE */
      .transactions-table-container {
        overflow-x: auto;
        margin: 10px 0 30px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
      }

      .transactions-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        min-width: 900px;
      }

      /* LARGER TABLE CELLS */
      .transactions-table th {
        background-color: #f6f6f6;
        color: #333;
        padding: 18px;
        text-align: left;
        font-weight: 600;
        font-size: 15px;
        border-top: 1px solid #eaeaea;
        border-bottom: 1px solid #eaeaea;
        white-space: nowrap;
      }

      .transactions-table td {
        padding: 18px;
        border-bottom: 1px solid #eaeaea;
        vertical-align: middle;
        font-size: 15px;
      }

      .transactions-table tr:hover {
        background-color: #f9f9f9;
      }

      /* IMPROVED TYPE BADGES */
      .transaction-type {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: 500;
        text-align: center;
        white-space: nowrap;
      }

      .type-credit {
        background-color: #d6f5d6;
        color: #0b6e0b;
      }

      .type-debit {
        background-color: #ffe0e0;
        color: #c50000;
      }

      .type-refund {
        background-color: #e0f0ff;
        color: #004e98;
      }

      /* LARGER BUTTONS */
      .detail-btn {
        background-color: #fd334e;
        color: white;
        border: none;
        padding: 10px 18px;
        border-radius: 6px;
        font-size: 15px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 7px;
      }

      .detail-btn:hover {
        background-color: #e62b42;
        transform: translateY(-2px);
      }

      .no-transactions {
        text-align: center;
        padding: 50px;
        background-color: #f9f9f9;
        border-radius: 8px;
        color: #777;
      }

      .payment-method {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
      }

      .payment-icon {
        font-size: 18px;
      }

      .balance-change {
        font-weight: 600;
        font-size: 16px;
      }

      .amount-credit {
        color: #0b6e0b;
        font-weight: 600;
        font-size: 16px;
      }

      .amount-debit {
        color: #c50000;
        font-weight: 600;
        font-size: 16px;
      }

      /* LARGER PAGINATION */
      .pagination-container {
        display: flex;
        justify-content: center;
        margin: 30px 0 10px;
      }
      
      .pagination .page-link {
        color: #fd334e;
        border-color: #fd334e;
        margin: 0 4px;
        padding: 10px 16px;
        font-size: 16px;
        border-radius: 6px;
      }
      
      .pagination .page-item.active .page-link {
        background-color: #fd334e;
        border-color: #fd334e;
        box-shadow: 0 2px 8px rgba(253, 51, 78, 0.3);
      }

      /* Responsive Adjustments */
      @media (max-width: 992px) {
        .payment-id-column, 
        .transaction-id-column, 
        .balance-column {
          display: none;
        }
        
        .transactions-table {
          min-width: 700px;
        }
        
        .info-container {
          padding: 30px;
        }
        
        .user-dashboard {
          padding: 30px 15px;
        }
      }

      @media (max-width: 767px) {
        .payment-method-column,
        .description-column {
          display: none;
        }
        
        .transactions-table {
          min-width: 500px;
        }
        
        .balance-amount {
          font-size: 38px;
        }
        
        .balance-card {
          padding: 30px;
        }
        
        .balance-actions {
          flex-direction: column;
          gap: 15px;
        }
        
        .info-container {
          padding: 25px;
        }
        
        .user-dashboard {
          padding: 20px 10px;
        }
      }

      .pagination-container {
        margin-top: 20px;
      }
      
      .pagination {
        margin-bottom: 10px;
      }
      
      .page-link {
        color: #fd334e;
        border: 1px solid #fd334e;
        padding: 8px 12px;
        margin: 0 2px;
        border-radius: 4px;
      }
      
      .page-item.active .page-link {
        background-color: #fd334e;
        border-color: #fd334e;
        color: white;
      }
      
      .page-link:hover {
        background-color: #fd334e;
        color: white;
      }
      
      .pagination-info {
        color: #666;
        font-size: 14px;
      }
      /* modal style */
      body {
      font-family: "Akshar", sans-serif;
      background-color: #f9f9f9;
      color: #333;
    }
    
