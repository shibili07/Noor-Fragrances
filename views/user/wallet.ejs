      border-radius: 12px;
      border: none;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
      overflow: hidden;
    }
    
    .modal-header {
      background-color: #0f172a;
      color: white;
      border-bottom: none;
      padding: 20px 25px;
    }
    
    .modal-title {
      font-size: 22px;
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .modal-body {
      padding: 25px;
      max-height: 70vh;
      overflow-y: auto;
    }
    
    .close-btn {
      background: none;
      border: none;
      color: white;
      font-size: 24px;
      opacity: 0.8;
      transition: all 0.2s;
    }
    
    .close-btn:hover {
      opacity: 1;
    }
    
    .transaction-detail {
      margin-bottom: 20px;
      border-bottom: 1px solid #eaeaea;
      padding-bottom: 15px;
    }
    
    .transaction-detail:last-child {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }
    
    .detail-label {
      color: #666;
      font-size: 14px;
      margin-bottom: 5px;
    }
    
    .detail-value {
      font-size: 16px;
      font-weight: 500;
    }
    
    .transaction-status {
      display: inline-block;
      padding: 6px 14px;
      border-radius: 20px;
      font-size: 14px;
      font-weight: 500;
      text-align: center;
    }
    
    .status-completed {
      background-color: #d6f5d6;
      color: #0b6e0b;
    }
    
    .status-cancelled {
      background-color: #ffe0e0;
      color: #c50000;
    }
    
    .status-pending {
      background-color: #fff8e0;
      color: #856404;
    }
    
    .modal-footer {
      border-top: 1px solid #eaeaea;
      padding: 20px 25px;
    }
    
    .print-btn {
      background-color: #fd334e;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .print-btn:hover {
      background-color: #e62b42;
      transform: translateY(-2px);
    }
    
    .close-modal-btn {
      background-color: #eeeeee;
      color: #333;
      border: none;
      padding: 10px 20px;
      border-radius: 6px;
      font-size: 15px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .close-modal-btn:hover {
      background-color: #e0e0e0;
    }
    
    .amount-credit {
      color: #0b6e0b;
      font-weight: 600;
      font-size: 18px;
    }
    
    .amount-debit {
      color: #c50000;
      font-weight: 600;
      font-size: 18px;
    }
    
    .payment-method {
      display: flex;
      align-items: center;
      gap: 8px;
    }
    
    .payment-icon {
      font-size: 20px;
    }
    
    .transaction-row {
      display: flex;
      flex-wrap: wrap;
    }
    
    .transaction-col {
      flex: 0 0 50%;
      padding-right: 15px;
    }
    
    .ordered-item {
      border: 1px solid #eaeaea;
      background-color: #f9f9f9;
    }
    .referral-details {
  border: 1px solid #eaeaea;
  background-color: #f9f9f9;
}

