<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f9f9f9;
            color: #333;
        }

        /* Header Space */
        .header-placeholder {
            height: 80px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        /* Breadcrumb Navigation */
        .breadcrumb {
            padding: 15px 50px;
            background-color: #fff;
            display: flex;
            align-items: center;
        }

        .breadcrumb a {
            text-decoration: none;
            color: #666;
            transition: color 0.3s ease;
        }

        .breadcrumb a:hover {
            color: #ff3e4e;
        }

        .breadcrumb span {
            margin: 0 10px;
            color: #999;
        }

        /* Main Content */
        .contact-title {
            text-align: center;
            margin: 40px 0;
            font-size: 2.5rem;
            color: #222;
            position: relative;
        }

        .contact-title::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background-color: #ff3e4e;
            border-radius: 3px;
        }

        .contact-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 30px;
        }

        /* Contact Info */
        .contact-info {
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .contact-method {
            margin-bottom: 30px;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeIn 0.5s forwards;
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .contact-method:nth-child(2) {
            animation-delay: 0.2s;
        }

        .icon-circle {
            width: 50px;
            height: 50px;
            background-color: #ff3e4e;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
            transition: transform 0.3s ease;
        }

        .icon-circle:hover {
            transform: scale(1.1);
        }

        .icon-circle i {
            color: white;
            font-size: 20px;
        }

        .contact-method h3 {
            margin-bottom: 10px;
            color: #222;
        }

        .contact-method p {
            color: #666;
            line-height: 1.6;
        }

        .divider {
            height: 1px;
            background-color: #eee;
            margin: 20px 0;
        }

        /* Contact Form */
        .contact-form {
            background-color: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .form-row {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeIn 0.5s forwards;
            animation-delay: 0.4s;
        }

        .form-group:nth-child(2) {
            animation-delay: 0.5s;
        }

        .form-group:nth-child(3) {
            animation-delay: 0.6s;
        }

        .message-group {
            animation-delay: 0.7s;
        }

        input, textarea {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #eee;
            border-radius: 5px;
            background-color: #f5f5f5;
            transition: all 0.3s ease;
            font-size: 16px;
        }

        input:focus, textarea:focus {
            outline: none;
            border-color: #ff3e4e;
            box-shadow: 0 0 0 2px rgba(255, 62, 78, 0.2);
        }

        textarea {
            resize: none;
            height: 150px;
        }

        input.error, textarea.error {
            border-color: #ff3e4e;
        }

        .error-message {
            color: #ff3e4e;
            font-size: 12px;
            margin-top: 5px;
            display: none;
        }

        button {
            background-color: #ff3e4e;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            float: right;
            transition: all 0.3s ease;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeIn 0.5s forwards;
            animation-delay: 0.8s;
        }

        button:hover {
            background-color: #e61e2e;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 62, 78, 0.3);
        }

        button:active {
            transform: translateY(0);
        }

        button.sending {
            background-color: #999;
            pointer-events: none;
        }

        button i {
            margin-right: 8px;
        }

        /* Map Section */
        .map-container {
            margin-top: 40px;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            height: 300px;
            opacity: 0;
            transform: translateY(20px);
            animation: fadeIn 0.5s forwards;
            animation-delay: 0.9s;
        }

        .map-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Success Message */
        .success-message {
            display: none;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
        }

        /* Footer Space */
        .footer-placeholder {
            height: 120px;
            background-color: #222;
            margin-top: 60px;
        }

        /* Responsive Design */
        @media (max-width: 900px) {
            .contact-container {
                grid-template-columns: 1fr;
            }

            .form-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Header Placeholder -->
    <div class="header-placeholder">
     <%- include("../../views/partials/user/header") %>

    </div>

    <!-- Breadcrumb Navigation -->
    <div class="breadcrumb">
        <a href="index.html">Home</a>
        <span>â€º</span>
        <a href="#" style="color: #333; font-weight: bold;">Contact</a>
    </div>

    <!-- Main Contact Section -->
    <h1 class="contact-title">Contact Us</h1>

    <div class="contact-container">
        <!-- Contact Information -->
        <div class="contact-info">
            <div class="contact-method">
                <div class="icon-circle">
                    <i class="fas fa-phone"></i>
                </div>
                <h3>Call To Us</h3>
                <p>We are available 24/7, 7 days a week.</p>
                <p>Phone: +91 0000000000</p>
            </div>

            <div class="divider"></div>

            <div class="contact-method">
                <div class="icon-circle">
                    <i class="fas fa-envelope"></i>
                </div>
                <h3>Write To US</h3>
                <p>Fill out our form and we will contact you within 24 hours.</p>
                <p>Email: pcmonarch@gmail.com</p>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="contact-form">
            <form id="contactForm">
                <div class="form-row">
                    <div class="form-group">
                        <input type="text" id="name" name="name" placeholder="Your Name *" required>
                        <div class="error-message" id="nameError">Please enter your name</div>
                    </div>
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="Your Email *" required>
                        <div class="error-message" id="emailError">Please enter a valid email address</div>
                    </div>
                    <div class="form-group">
                        <input type="tel" id="phone" name="phone" placeholder="Your Phone *" required>
                        <div class="error-message" id="phoneError">Please enter a valid phone number</div>
                    </div>
                </div>
                <div class="form-group message-group">
                    <textarea id="message" name="message" placeholder="Your Message" required></textarea>
                    <div class="error-message" id="messageError">Please enter your message</div>
                </div>
                <button type="submit" id="submitBtn">
                    <i class="fas fa-paper-plane"></i> Send Message
                </button>
                <div class="success-message" id="successMessage">
                    <i class="fas fa-check-circle"></i> Your message has been sent successfully!
                </div>
            </form>
        </div>
    </div>

    <!-- Map Section -->
    <div class="contact-container">
        <div class="map-container">
            <img src="/api/placeholder/1200/300" alt="Map Location">
        </div>
    </div>

    <!-- Footer Placeholder -->
    <div class="footer-placeholder">
        <%- include("../../views/partials/user/footer") %>

    </div>

    <script>
        // Form Validation and Submission
        document.addEventListener('DOMContentLoaded', function() {
            const contactForm = document.getElementById('contactForm');
            const nameInput = document.getElementById('name');
            const emailInput = document.getElementById('email');
            const phoneInput = document.getElementById('phone');
            const messageInput = document.getElementById('message');
            const submitBtn = document.getElementById('submitBtn');
            const successMessage = document.getElementById('successMessage');
            
            // Input animations on focus
            const inputs = document.querySelectorAll('input, textarea');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.transform = 'translateY(-3px)';
                });
                
                input.addEventListener('blur', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Form validation
            function validateName() {
                const value = nameInput.value.trim();
                const errorElement = document.getElementById('nameError');
                
                if (value === '') {
                    nameInput.classList.add('error');
                    errorElement.style.display = 'block';
                    return false;
                } else {
                    nameInput.classList.remove('error');
                    errorElement.style.display = 'none';
                    return true;
                }
            }
            
            function validateEmail() {
                const value = emailInput.value.trim();
                const errorElement = document.getElementById('emailError');
                const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                
                if (!emailPattern.test(value)) {
                    emailInput.classList.add('error');
                    errorElement.style.display = 'block';
                    return false;
                } else {
                    emailInput.classList.remove('error');
                    errorElement.style.display = 'none';
                    return true;
                }
            }
            
            function validatePhone() {
                const value = phoneInput.value.trim();
                const errorElement = document.getElementById('phoneError');
                const phonePattern = /^\+?[0-9\s\-()]{8,}$/;
                
                if (!phonePattern.test(value)) {
                    phoneInput.classList.add('error');
                    errorElement.style.display = 'block';
                    return false;
                } else {
                    phoneInput.classList.remove('error');
                    errorElement.style.display = 'none';
                    return true;
                }
            }
            
            function validateMessage() {
                const value = messageInput.value.trim();
                const errorElement = document.getElementById('messageError');
                
                if (value === '') {
                    messageInput.classList.add('error');
                    errorElement.style.display = 'block';
                    return false;
                } else {
                    messageInput.classList.remove('error');
                    errorElement.style.display = 'none';
                    return true;
                }
            }
            
            // Add event listeners for real-time validation
            nameInput.addEventListener('blur', validateName);
            emailInput.addEventListener('blur', validateEmail);
            phoneInput.addEventListener('blur', validatePhone);
            messageInput.addEventListener('blur', validateMessage);
            
            // Form submission
            contactForm.addEventListener('submit', function(e) {
                e.preventDefault();
                
                const isNameValid = validateName();
                const isEmailValid = validateEmail();
                const isPhoneValid = validatePhone();
                const isMessageValid = validateMessage();
                
                if (isNameValid && isEmailValid && isPhoneValid && isMessageValid) {
                    // Show sending state
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Sending...';
                    submitBtn.classList.add('sending');
                    
                    // Prepare form data
                    const formData = {
                        name: nameInput.value.trim(),
                        email: emailInput.value.trim(),
                        phone: phoneInput.value.trim(),
                        message: messageInput.value.trim()
                    };
                    
                    // Simulate fetch API call
                    fetch('https://jsonplaceholder.typicode.com/posts', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Reset form
                        contactForm.reset();
                        
                        // Show success message
                        successMessage.style.display = 'block';
                        
                        // Reset button
                        submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Send Message';
                        submitBtn.classList.remove('sending');
                        
                        // Hide success message after 5 seconds
                        setTimeout(() => {
                            successMessage.style.display = 'none';
                        }, 5000);
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        
                        // Reset button
                        submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Send Message';
                        submitBtn.classList.remove('sending');
                        
                        // Show error (in a real application, you'd want to show this to the user)
                        alert('There was an error sending your message. Please try again.');
                    });
                }
            });
            
            // Simple animation for map container on scroll
            const mapContainer = document.querySelector('.map-container');
            
            function isInViewport(element) {
                const rect = element.getBoundingClientRect();
                return (
                    rect.top >= 0 &&
                    rect.left >= 0 &&
                    rect.bottom <= (window.innerHeight || document.documentElement.clientHeight) &&
                    rect.right <= (window.innerWidth || document.documentElement.clientWidth)
                );
            }
            
            function handleScroll() {
                if (isInViewport(mapContainer)) {
                    mapContainer.style.animation = 'fadeIn 0.8s forwards';
                    window.removeEventListener('scroll', handleScroll);
                }
            }
            
            window.addEventListener('scroll', handleScroll);
            handleScroll(); // Check on page load
        });
    </script>
</body>
</html>