<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NOOR Fragrance - My Info</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Akshar:wght@400;600&display=swap" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/user/userInfo.css">
</head>

<body>

  <%- include("../../views/partials/user/header") %>

    <div class="container-fluid user-dashboard">
      <div class="row">
        <div class="col-lg-2 mb-4">
          <%- include("../../views/partials/user/profileMenu") %>
        </div>

        <div class="col-lg-10">
          <div class="info-container">
            <h2 class="section-title">My Profile</h2>

            <div class="contact-details mb-5">
              <!-- Profile Picture -->
              <div class="profile-picture-container">
                <% if (user.userImage[0]) { %>
                  <img src="<%= user.userImage[0] %>" alt="Profile Picture" class="profile-picture">
                  <% } else { %>
                    <img
                      src="https://res.cloudinary.com/dlf7ygi2x/image/upload/v1746018861/360_F_850472001_eLLSs2ZOAAqJBpJN0r3cTtBZVSdDt3TH_iqme3a.jpg"
                      alt="Profile Picture" class="profile-picture">
                    <% } %>
              </div>

              <!-- Info Fields -->
              <div class="info-detail">
                <div class="info-label">Your Name</div>
                <div class="info-value">
                  <%= user.name %>
                </div>
              </div>

              <div class="info-detail">
                <div class="info-label">Your Phone</div>
                <div class="info-value">
                  <%= user.phone %>
                </div>
              </div>

              <a href="/editProfile" class="edit-profile-btn">Edit Profile</a>

              <br>


              <div class="info-detail">
                <div class="info-label">Your Email</div>
                <div class="info-value">
                  <span>
                    <%= user.email %>
                  </span>
                 <%if(!user.googleId){%>
                  <a href="/change-email" class="change-btn" style="text-decoration: none;">Change</a>

                <%}%>
                </div>
              </div>

              <div class="info-detail">
                <div class="info-label">Password</div>
                <div class="info-value">
                  <span class="password-dots">••••••••</span>
                  <%if(!user.googleId){%>
                    <button id="openPasswordModal" data-user-id="<%= user._id %>" class="change-btn">Change</button>
                    <%}%>
                </div>
              </div>
            </div>


          </div>
        </div>
      </div>
    </div>

    <!-- Password Modal -->
    <!-- Password Modal -->
    <div id="passwordModal" class="modal">
      <div class="modal-content">
        <span class="close" id="closePasswordModal">×</span>
        <h2>Change Your Password</h2>
        <form id="passwordForm">
          <div class="form-group">
            <label for="currentPassword">Current Password</label>
            <div class="input-wrapper">
              <input type="password" id="currentPassword" name="currentPassword" placeholder="Enter Current Password" />
              <span class="toggle-password fas fa-eye" data-target="currentPassword"></span>
            </div>
            <div id="currentPasswordError" class="text-danger mt-1" style="font-size: 14px;"></div>
          </div>

          <div class="form-group">
            <label for="newPassword">New Password</label>
            <div class="input-wrapper">
              <input type="password" id="newPassword" name="newPassword" placeholder="Enter New Password" />
              <span class="toggle-password fas fa-eye" data-target="newPassword"></span>
            </div>
            <div id="newPasswordError" class="text-danger mt-1" style="font-size: 14px;"></div>
          </div>

          <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <div class="input-wrapper">
              <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm New Password" />
              <span class="toggle-password fas fa-eye" data-target="confirmPassword"></span>
            </div>
            <div id="confirmPasswordError" class="text-danger mt-1" style="font-size: 14px;"></div>
          </div>

          <button type="submit" class="submit-btn">Save Changes</button>
        </form>
      </div>
    </div>

    <%- include("../../views/partials/user/footer") %>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
      <script src="/js/user/userInfo.js"></script>
</html>