<%-include("../../views/partials/user/header")%>
<link rel="stylesheet" href="/styles/user/home.css">


<body>
  <div class="section-container">
    <!-- Main Banner with Subtle Animation -->
    <div class="main-banner">
      <img src="/img/home/m-banner.png" alt="NOOR Fragrances" class="banner-image">
      <div class="banner-content">
        <!-- You can add content here if needed -->
      </div>
    </div>

    <!-- Featured Products Section with Enhanced Classic Title -->
    <h2 class="section-title">
      Signature Collections
      <span class="section-subtitle">Carefully crafted fragrances for discerning tastes</span>
    </h2>
    
    <div class="products-grid">
      <% for (let i = 0; i < products.length; i++) { %>
        <div class="product-card staggered-item">
          
          <a href="/productDetails/<%= products[i]._id %>" style="text-decoration: none;">
            <img src="<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>" class="product-image">
            <div class="product-info">
              <div class="product-title"><%= products[i].productName %></div>
              <div class="product-brand"><%= products[i].brand %></div>
    
              <% const firstVariant = products[i].variants[0]; %>
    
              <div class="product-price">
                <% if (firstVariant.offerPrice < firstVariant.salePrice) { %>
                  <span style="text-decoration: line-through; color: gray;">
                    ₹<%= firstVariant.salePrice.toLocaleString('en-IN') %>
                  </span>
                  <span style="color: green; font-weight: bold;">
                    ₹<%= firstVariant.offerPrice.toLocaleString('en-IN') %>
                  </span>
                <% } else { %>
                  <span style="font-weight: bold;">
                    ₹<%= firstVariant.salePrice.toLocaleString('en-IN') %>
                  </span>
                <% } %>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
    
  
  <!-- Feedback Section styled like the reference -->
  <div class="feedback-section">
    <div class="feedback-container">
      <h2 class="section-title">
        Feedback
        <span class="section-subtitle">What our customers say</span>
      </h2>
      
      <div class="feedback-slider-container">
        <!-- Feedback Cards Row -->
        <div class="feedback-row">
          <!-- Card 1 -->
          <div class="feedback-card-simple active" data-index="0">
            <div class="rating-stars">
              <span class="star">★</span>
              <span class="star">★</span>
              <span class="star">★</span>
              <span class="star">★</span>
              <span class="star empty">☆</span>
            </div>
            <div class="customer-info">
              <img src="/img/default-avatar.png" alt="Ronald Richards" class="customer-avatar">
              <h3 class="customer-name">Ronald Richards</h3>
            </div>
