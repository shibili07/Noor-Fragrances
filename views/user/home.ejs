<%-include("../../views/partials/user/header")%>
<link rel="stylesheet" href="/styles/user/home.css">


<body>
  <div class="section-container">
    <!-- Main Banner with Subtle Animation -->
    <div class="main-banner">
      <img src="/img/home/m-banner.png" alt="NOOR Fragrances" class="banner-image">
      <div class="banner-content">
        <!-- You can add content here if needed -->
      </div>
    </div>

    <!-- Featured Products Section with Enhanced Classic Title -->
    <h2 class="section-title">
      Signature Collections
      <span class="section-subtitle">Carefully crafted fragrances for discerning tastes</span>
    </h2>
    
    <div class="products-grid">
      <% for (let i = 0; i < products.length; i++) { %>
        <div class="product-card staggered-item">
          
          <a href="/productDetails/<%= products[i]._id %>" style="text-decoration: none;">
            <img src="<%= products[i].productImage[0] %>" alt="<%= products[i].productName %>" class="product-image">
            <div class="product-info">
              <div class="product-title"><%= products[i].productName %></div>
              <div class="product-brand"><%= products[i].brand %></div>
    
              <% const firstVariant = products[i].variants[0]; %>
    
              <div class="product-price">
                <% if (firstVariant.offerPrice < firstVariant.salePrice) { %>
                  <span style="text-decoration: line-through; color: gray;">
                    ₹<%= firstVariant.salePrice.toLocaleString('en-IN') %>
                  </span>
                  <span style="color: green; font-weight: bold;">
                    ₹<%= firstVariant.offerPrice.toLocaleString('en-IN') %>
                  </span>
                <% } else { %>
                  <span style="font-weight: bold;">
                    ₹<%= firstVariant.salePrice.toLocaleString('en-IN') %>
                  </span>
                <% } %>
              </div>
            </div>
          </a>
        </div>
      <% } %>
    </div>
    
  
  <!-- Feedback Section styled like the reference -->
  <h2 class="section-title">Signature Categories <span class="section-subtitle">Explore our diverse fragrance collections</span></h2>
      <div class="category-grid">
          <div class="category-card">
              <img src="https://res.cloudinary.com/dlf7ygi2x/image/upload/v1747403611/ChatGPT_Image_May_16_2025_07_22_52_PM_nge9xt.png" alt="Body Spray" class="category-image">
              <div class="category-info">
                  <h3 class="category-title">Body Spray</h3>
                  <a href="/shop?search=&sort=&categoryf=6807527c2ee68596027743bf&genderf=&size=&minValue=1&maxValue=100000" class="explore-btn">Explore Now</a>
              </div>
          </div>
          <div class="category-card">
              <img src="https://res.cloudinary.com/dlf7ygi2x/image/upload/v1747403704/backlighting-miss-dior-perfume-pink_qo4bn4.jpg" alt="Perfumes" class="category-image">
              <div class="category-info">
                  <h3 class="category-title">Perfumes</h3>
                  <a href="/shop?search=&sort=&categoryf=680751fe2ee6859602774398&genderf=&size=&minValue=1&maxValue=100000" class="explore-btn">Explore Now</a>
              </div>
          </div>
          <div class="category-card">
              <img src="https://res.cloudinary.com/dlf7ygi2x/image/upload/v1747403424/Mystic-Sandal-01_Edited_xyendh.jpg" alt="Solids" class="category-image">
              <div class="category-info">
                  <h3 class="category-title">Solids</h3>
                  <a href="/shop?search=&sort=&categoryf=680752232ee68596027743a5&genderf=&size=&minValue=1&maxValue=100000" class="explore-btn">Explore Now</a>
              </div>
          </div>
          <div class="category-card">
              <img src="https://res.cloudinary.com/dlf7ygi2x/image/upload/v1747403795/maxresdefault_asdhjh.jpg" alt="Attars" class="category-image">
              <div class="category-info">
                  <h3 class="category-title">Attars</h3>
                  <a href="/shop?search=&sort=&categoryf=6807524c2ee68596027743b2&genderf=&size=&minValue=1&maxValue=100000" class="explore-btn">Explore Now</a>
              </div>
          </div>
      </div>
  
  <!-- Add space before footer -->
  <div class="pre-footer-space"></div>
</div><!-- Close section-container -->

<footer>
  <%-include("../../views/partials/user/footer")%>
</footer>
 <script src="/js/user/home.js"></script>
</body>
