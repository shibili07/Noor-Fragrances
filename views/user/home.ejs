          </div>
          
          <!-- Card 3 -->
          <div class="feedback-card-simple" data-index="2">
            <div class="rating-stars">
              <span class="star">★</span>
              <span class="star">★</span>
              <span class="star">★</span>
              <span class="star">★</span>
              <span class="star">★</span>
            </div>
            <div class="customer-info">
              <img src="/img/default-avatar.png" alt="Ronald Richards" class="customer-avatar">
              <h3 class="customer-name">Ronald Richards</h3>
