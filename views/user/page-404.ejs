<%- include("../../views/partials/user/header") %>

<style>
    /* Keyframe animations */
    @keyframes scaleIn {
        0% {
            transform: scale(0.5);
            opacity: 0;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    @keyframes fadeInUp {
        0% {
            transform: translateY(20px);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(255, 58, 84, 0.4);
        }
        70% {
            transform: scale(1.05);
            box-shadow: 0 0 0 10px rgba(255, 58, 84, 0);
        }
        100% {
            transform: scale(1);
            box-shadow: 0 0 0 0 rgba(255, 58, 84, 0);
        }
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .error-page-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 200px);
        text-align: center;
        padding: 20px;
        background: linear-gradient(135deg, #f5f7fa 0%, #e5e7eb 100%);
    }

    .error-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .error-code {
        font-size: 180px;
        font-weight: 900;
        color: #ff3a54;
        line-height: 1.1;
        animation: scaleIn 0.6s ease-out;
    }

    .error-title {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 16px;
        color: #111827;
        animation: fadeInUp 0.8s ease-out 0.2s both;
    }

    .error-message {
        font-size: 18px;
        color: #4b5563;
        margin-bottom: 32px;
        line-height: 1.6;
        animation: fadeInUp 0.8s ease-out 0.4s both;
    }

    .home-button {
        display: inline-block;
        background-color: #ff3a54;
        color: white;
        text-decoration: none;
        padding: 16px 32px;
        border-radius: 8px;
        font-size: 18px;
        font-weight: 600;
        transition: all 0.3s ease;
        animation: fadeInUp 0.8s ease-out 0.6s both, pulse 2s infinite ease-in-out;
    }

    .home-button:hover {
        background-color: #e0314a;
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .home-button:active {
        transform: scale(0.98);
    }

    /* Responsive adjustments for smaller screens */
    @media (max-width: 768px) {
        .error-container {
            padding: 20px;
        }

        .error-code {
            font-size: 120px;
        }

        .error-title {
            font-size: 28px;
            margin-bottom: 12px;
        }

        .error-message {
            font-size: 16px;
            margin-bottom: 24px;
        }

        .home-button {
            padding: 12px 24px;
            font-size: 16px;
        }
    }

    /* Further reductions for very small screens */
    @media (max-width: 480px) {
        .error-container {
            padding: 16px;
        }

        .error-code {
            font-size: 100px;
        }

        .error-title {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .error-message {
            font-size: 15px;
            margin-bottom: 20px;
        }
        .home-button {
            padding: 10px 20px;
            font-size: 15px;
        }
    }
</style>

<div class="error-page-wrapper">
    <div class="error-container">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Oops! Page not found</h2>
        <p class="error-message">The page you are looking for might have been removed or temporarily unavailable.</p>
        <a href="/" class="home-button">Back to HomePage</a>
    </div>
</div>

<%- include("../../views/partials/user/footer") %>